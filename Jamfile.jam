# utfcpp

SubDir TOP external utfcpp ;

{
    local SOURCES HEADERS ;
    SOURCES = $(SUBDIR)/empty.cpp ;

    HEADERS += checked.h core.h unchecked.h ;
    HEADERS = $(SUBDIR)/source/utf8/$(HEADERS) ;

    C.IncludeDirectories * : .include ;
    local LIB = [ C.Library external-utfcpp : $(SOURCES) ] ;
    CopyFiles $(LIB) : $(SUBDIR)/.include/utfcpp : $(HEADERS) ;
}
